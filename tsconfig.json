{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
    },
    "include": [
        "./**/*.ts",
        "prisma/seed-data.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}
